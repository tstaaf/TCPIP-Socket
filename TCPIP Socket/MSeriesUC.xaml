<UserControl x:Class="TCPIP_Socket.MSeriesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCPIP_Socket"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="590">
    <Grid>
        <StackPanel Margin="10">
            <Label x:Name="LayoutSelectLabel" Content="Label location:" Visibility="Collapsed" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBox x:Name="LayoutSelectBox" TextWrapping="Wrap" Text="" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Margin="10" />
            <Label Content="Command:" VerticalAlignment="Top"/>
            <ComboBox x:Name="CommandList" SelectionChanged="CommandList_SelectionChanged" Margin="10"/>
            <TextBox x:FieldModifier="public" x:Name="Message" TextWrapping="Wrap" Margin="10"/>
            <Button Content="C41" HorizontalAlignment="Left" Margin="10" Click="Button_Click"/>
        </StackPanel>
        

    </Grid>
</UserControl>
